<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A52A2A"
        android:includeFontPadding="false"
        android:text="Gra w kości. Autor: Jonatan Kozłowski"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:padding="10dp"
        android:gravity="center" />

    <Button
        android:id="@+id/Rzut"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#D2691E"
        android:text="Rzuć kościami"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/kostka1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            android:background="#FFFFFF"
            android:text=" ? "
            android:textAlignment="center"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/kostka2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="9dp"
            android:background="#FFFFFF"
            android:text=" ? "
            android:textAlignment="center"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/kostka3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="9dp"
            android:background="#FFFFFF"
            android:text=" ? "
            android:textAlignment="center"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/kostka4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="9dp"
            android:background="#FFFFFF"
            android:text=" ? "
            android:textAlignment="center"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/kostka5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#FFFFFF"
            android:text=" ? "
            android:textAlignment="center"
            android:textSize="45sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/Wynik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Wynik tego losowania: 0" />

    <TextView
        android:id="@+id/wynikGry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Wynik gry: 0" />

    <TextView
        android:id="@+id/liczbaRzutow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Liczba rzutów: 0" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#D2691E"
        android:text="Resetuj"
        android:textColor="#FFFFFF"
        android:layout_marginHorizontal="10dp"/>

</LinearLayout>